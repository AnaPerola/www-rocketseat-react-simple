{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],                                        
    "allowJs": true,                                  
    "jsx": "react-jsx",                                
    "noEmit": true,                                   
    "strict": true,                                      
    "target": "es2016",                                  
    "moduleResolution": "node",                       
    "resolveJsonModule": true,                        
    "isolatedModules": true,                          
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "skipLibCheck": true,                                 
    "forceConsistentCasingInFileNames": true,            
    // "module": "commonjs",                                
  },
  "include": ["src"]
}
